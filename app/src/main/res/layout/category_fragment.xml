<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_category_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    app:behavior_hideable="true"
    android:layout_marginTop="30dp"
    app:behavior_peekHeight="1000dp"
    tools:context=".ui.login.category.CategoryFragment">

    <ListView
        android:id="@+id/category_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_view_category_list"
        android:divider="@color/black"
        android:dividerHeight="1dp" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_view_category_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:queryHint="Search for category"
        android:layout_alignParentTop="true"
        android:layoutDirection="rtl"
        android:animateLayoutChanges="true" />

</RelativeLayout>